# ==============================================
# Animal Disease Reporting System - Environment Variables
# ==============================================
# 
# IMPORTANT: This is a template file. Copy this to .env and fill in actual values.
# NEVER commit .env file to version control.
#
# ==============================================

# Server Configuration
SERVER_PORT=8081

# Database Configuration (PostgreSQL - Primary)
DB_URL=jdbc:postgresql://localhost:5432/adrsdb
DB_USERNAME=postgres
DB_PASSWORD=dbLasitha

# Database Connection Pool
DB_POOL_SIZE=10
DB_POOL_MIN_IDLE=5
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000
DB_MAX_LIFETIME=1800000

# JPA Configuration
JPA_DDL_AUTO=update
JPA_SHOW_SQL=false

# Security Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password

# Session Configuration
SESSION_TIMEOUT=30m
SESSION_COOKIE_SECURE=false

# Logging Configuration
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_SPRING=INFO
LOG_LEVEL_SECURITY=DEBUG
LOG_LEVEL_SQL=DEBUG
LOG_LEVEL_SQL_PARAMS=TRACE

# Log File Configuration
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_MAX_HISTORY=30

# File Upload Configuration
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=10MB

# Thymeleaf Configuration
THYMELEAF_CACHE=false

# Actuator Configuration
ACTUATOR_ENDPOINTS=health,info,metrics
ACTUATOR_HEALTH_DETAILS=when-authorized

# Swagger/OpenAPI Configuration
SWAGGER_ENABLED=true

# Pagination Configuration
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Map Configuration (Sri Lanka center coordinates)
MAP_CENTER_LAT=7.8731
MAP_CENTER_LNG=80.7718
MAP_ZOOM=7

# ==============================================
# Production Deployment Notes:
# ==============================================
# 1. Change all default passwords
# 2. Set JPA_DDL_AUTO=validate in production
# 3. Set JPA_SHOW_SQL=false in production
# 4. Set LOG_LEVEL_SQL=WARN in production
# 5. Set SESSION_COOKIE_SECURE=true if using HTTPS
# 6. Set THYMELEAF_CACHE=true in production
# 7. Set SWAGGER_ENABLED=false in production (or restrict access)
# ==============================================
